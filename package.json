{
  "name": "back-end-interview",
  "version": "1.0.0",
  "description": "A test project for back-end interview",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "test": "docker-compose -f docker-compose.test.yml up -d --build && dotenv -e .env.test npm run db:push && dotenv -e .env.test jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "docker-compose -f docker-compose.test.yml up -d && dotenv -e .env.test npm run db:push && dotenv -e .env.test jest -i --watchAll && docker-compose -f docker-compose.test.yml down",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:seed": "prisma db seed",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:init": "npm run db:push && npm run db:seed",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wangxpert/back-end-interview.git"
  },
  "author": "",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/swagger-ui-express": "^4.1.8",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "http-status": "^2.1.0",
    "jest": "^29.7.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pg": "^8.13.3",
    "prisma": "^6.4.1",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@faker-js/faker": "^9.5.0",
    "@jest/globals": "^29.7.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  }
}
